{
  "manifest_version": 2,
  "name": "Lorem Fill",
  "version": "1.0",
  "description": "Right-click to fill text inputs with Lorem Ipsum",
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}